---
import Chips from '@components/Chips/Chips.astro';
import type { Technology } from '@interfaces/types';
import type { CollectionEntry } from 'astro:content';
import Smartphone from '../icons/smartphone.astro';
import Monitor from '../icons/pc.astro';

type Props = {
  proyect: CollectionEntry<'projects'>;
};

const { proyect } = Astro.props;
const { title, summary, isInConstruction, tags, isNew } = proyect.data;
const tegnologiesTags = tags as Technology[];
const isIOS = tags.map((tag) => tag.toLowerCase()).includes('ios');
---

<article class="proyect">
  <a class="proyect__link" href={`/info-proyects/${proyect.slug}`}>
    <header class="proyect__header">
      <h2 class="proyect__title" transition:name={`${title}-title`}>
        <div class="proyect__title-content">
          {isIOS ? (
            <Smartphone class="proyect__icon icon-offset" />
          ) : (
            <Monitor class="proyect__icon icon-offset" />
          )}
          {title}
        </div>
        {isNew && <span class="badge badge--new">Novedad</span>}
        {isInConstruction && <span class="badge badge--wip">Desarrollo activo</span>}
        <!-- <ArrowShortDown class="proyect__icon proyect__arrow" /> -->
      </h2>
    </header>
    <div class="proyect__content">
      <span class="smoke">{summary}</span>

      <Chips tegnologies={tegnologiesTags} />
    </div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke-width="2.5"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon"
    >
      <line x1="5" y1="12" x2="19" y2="12" class="line"></line>
      <polyline points="12 5 19 12 12 19" class="arrow"></polyline>
    </svg>
  </a>
</article>

<style>
  .proyect {
    position: relative;
    padding: 1.4rem;
    border-radius: 0.375rem;

    --tw-ring-color: rgba(var(--muted), 1);
    --tw-ring-shadow: 0 0 0 1px var(--tw-ring-color);
    box-shadow: var(--tw-ring-shadow), var(--tw-shadow, 0 0 #0000);
  }
  .proyect__link {
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    row-gap: 1rem;
  }
  .proyect:hover {
    background-color: rgba(var(--color-button-muted), 0.5);
  }

  .proyect__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5em;
  }

  .proyect__title {
    font-size: clamp(1rem, 2vw, 1.2rem);

    display: flex;
    align-items: center;
    gap: 1rem;
    line-height: 0.75rem;
  }
  .proyect__title-content {
    display: flex;
    align-items: center;
    gap: 0.3em;
    transition:
      color 0.3s ease-in,
      border-color 0.3s ease-in;
  }
  .proyect:hover .proyect__title-content {
    color: rgba(var(--color), 1);
    border-color: rgba(var(--color), 1);
  }
  .proyect:hover .proyect__arrow {
    transform: translate(0.4rem, -0.3rem);
  }
  .badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1;
    white-space: nowrap;
  }
  .badge--new {
    background-color: rgba(var(--color), 0.15);
    color: rgb(var(--color));
    border: 1px solid rgba(var(--color), 0.3);
  }
  .badge--wip {
    background-color: rgba(var(--color-button-accent), 0.15);
    color: rgb(var(--color-button-accent));
    border: 1px solid rgba(var(--color-button-accent), 0.3);
  }
  .proyect__content {
    display: flex;
    flex-direction: column;
    row-gap: 1rem;
  }
  .proyect__icon {
    width: 1rem;
  }
  .proyect__arrow {
    color: rgb(var(--color), 1);
    transition: transform 0.2s ease-in;
  }

  .icon {
    position: absolute;
    right: 1rem;
    top: 45%;
    stroke: currentColor;
    overflow: visible;
  }
  .line {
    transform: scaleX(0) translateX(4px);
    transform-origin: left;
    transition: transform 0.3s ease-in-out;
  }
  .arrow {
    transform: translateX(0);
    transition: transform 0.3s ease-in-out;
  }
  .proyect:hover .line {
    transform: scaleX(1) translateX(1px);
  }
  .proyect:hover .arrow {
    transform: translateX(1px);
  }
  .proyect:hover .icon {
    stroke: white;
  }

  .icon-offset {
  margin-bottom: -2px; /* Ajusta seg√∫n lo que necesites */
}
</style>
