---
import SkillsIcon from './icons/SkillsIcon.astro';
import SectionTitle from './section-title/SectionTitle.astro';



const iOSTools = [
  { name: "Swift" },  
  { name: "SwiftUI" }
];

const WebBackground = [
  { name: "Astro" },
  { name: "TypeScript" },
  { name: "JS" },
  { name: "NodeJS" },
];

const tools = [
  { name: "GitHub" },
  { name: "Figma" },
  { name: "Firebase" },
  { name: "MongoDB" },
];

// Todos los iconos desde el mismo origen: Devicon v√≠a jsDelivr
// Formato: https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/{slug}/{slug}-original.svg
const ICONS: Record<string, string> = {
  Swift: 'swift',
  SwiftUI: 'xcode',     // alternativa para SwiftUI
  Astro: 'astro',
  TypeScript: 'typescript',
  JS: 'javascript',
  NodeJS: 'nodejs',
  MongoDB: 'mongodb',
  GitHub: 'github',
  Figma: 'figma',
  Firebase: 'firebase'
};
const iconUrl = (name: string) => {
  const slug = ICONS[name];
  return `https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${slug}/${slug}-original.svg`;
};
---

<section class="skills wrapper" id="skills">
  <SectionTitle title="Tech Stack">
    <SkillsIcon class="section-icon" />
  </SectionTitle>

  <div class="skills__content">
    <h3 class="skills__subtitle smoke">iOS Tools</h3>
    <ul class="skills__ul">
      {
        iOSTools.map((tech) => (
          <li class="skills__li">
            <img src={iconUrl(tech.name)} alt={tech.name} class="skills__icon" loading="lazy" decoding="async" />
            {tech.name}
          </li>
        ))
      }
    </ul>

    <h3 class="skills__subtitle smoke">Web Background</h3>
    <ul class="skills__ul">
      {
        WebBackground.map((tech) => (
          <li class="skills__li">
            <img src={iconUrl(tech.name)} alt={tech.name} class="skills__icon" loading="lazy" decoding="async" />
            {tech.name}
          </li>
        ))
      }
    </ul>

    <h3 class="skills__subtitle smoke">Herramientas</h3>
    <ul class="skills__ul">
      {
        tools.map((tool) => (
          <li class="skills__li">
            <img src={iconUrl(tool.name)} alt={tool.name} class="skills__icon" loading="lazy" decoding="async" />
            {tool.name}
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .skills {
    padding: 1em;
    margin-bottom: 3rem;

    display: flex;
    flex-direction: column;
    row-gap: 1em;
  }
  .skills__title {
    font-size: clamp(1.7rem, 5vw, 2.5rem);
    font-weight: 700;

    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  .skills__content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }
  .skills__subtitle {
    font-size: 1.2em;
    font-weight: 600;
    border-bottom: 1px solid rgba(var(--color), 1); 
    width: fit-content;
  }
  .skills__ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5em; 
  }
  .skills__li {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
    text-align: center;
    margin: 0.25em; 
  }
  .skills__icon {
    width: 3rem;
    height: 3rem;
    opacity: 0.95;
  }
  .larger-icon {
    width: 3rem;
    height: 3rem;
  }
</style>
